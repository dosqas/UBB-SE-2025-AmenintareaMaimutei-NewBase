<Window
    x:Class="Duolingo2.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Duolingo2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Duolingo2">

    <Grid Background="#F5EFEA" Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- SIDEBAR FILTERS -->
        <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Background="#D1BFB7" CornerRadius="6" Padding="20" Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Scrollable Filter Content -->
                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="20">
                        <TextBlock Text="Filters" FontSize="30" FontWeight="Bold" Foreground="#1C1B3A" HorizontalAlignment="Center"/>

                        <TextBlock Text="Enrollment Status" FontWeight="SemiBold" Foreground="#1C1B3A" FontSize="20"/>
                        <CheckBox x:Name="EnrolledCheckBox" Content="Enrolled" Checked="EnrollmentChanged" Unchecked="EnrollmentChanged"/>
                        <CheckBox x:Name="NotEnrolledCheckBox" Content="Not Enrolled" Checked="EnrollmentChanged" Unchecked="EnrollmentChanged"/>
                        <Rectangle Height="1" Fill="Gray" Margin="0,10"/>

                        <TextBlock Text="Topics" FontWeight="SemiBold" Foreground="#1C1B3A" FontSize="20"/>
                        <StackPanel x:Name="TopicsPanel" Spacing="5">
                            <CheckBox Content="Programming" Checked="FilterChanged" Unchecked="FilterChanged"/>
                            <CheckBox Content="Python" Checked="FilterChanged" Unchecked="FilterChanged"/>
                            <CheckBox Content="C#" Checked="FilterChanged" Unchecked="FilterChanged"/>
                            <CheckBox Content="Algorithms" Checked="FilterChanged" Unchecked="FilterChanged"/>
                        </StackPanel>
                        <Rectangle Height="1" Fill="Gray" Margin="0,10"/>

                        <TextBlock Text="Pricing" FontWeight="SemiBold" Foreground="#1C1B3A" FontSize="20"/>
                        <CheckBox x:Name="FreeCheckBox" Content="Free" Checked="PricingChanged" Unchecked="PricingChanged"/>
                        <CheckBox x:Name="PaidCheckBox" Content="Paid" Checked="PricingChanged" Unchecked="PricingChanged"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- Fixed Button -->
                <Button Grid.Row="1"
                        Content="CLEAR FILTERS"
                        Click="ClearFilters_Click"
                        Background="#2F324B"
                        Foreground="White"
                        FontWeight="Bold"
                        Padding="10,5"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Stretch"
                        CornerRadius="10"/>
            </Grid>
        </Border>

        <!-- SEARCH BAR + COINS -->
        <Grid Grid.Column="1" Grid.Row="0" Margin="0,20,80,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Search -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Grid.Column="0" HorizontalAlignment="Center">
                <TextBlock Text="ðŸ”" FontSize="18" VerticalAlignment="Center" Margin="20,0,5,0"/>
                <TextBox x:Name="SearchBox"
                         Width="800"
                         Height="40"
                         PlaceholderText="Search"
                         Background="#C9B4AC"
                         Padding="10,5"
                         BorderBrush="#4A4E69"
                         CornerRadius="12"
                         FontSize="20"
                         TextChanged="SearchBox_TextChanged"/>
            </StackPanel>

            <!-- Coin badge -->
            <StackPanel Orientation="Horizontal"
                        Grid.Column="1"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Right"
                        Background="#2F324B"
                        CornerRadius="12"
                        Padding="10,5"
                        Margin="10,0,0,0">
                <TextBlock x:Name="CoinAmountText"
                           Text="100"
                           Foreground="White"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           FontSize="18"
                           Margin="0,0,5,0"/>
                <TextBlock Text="ðŸª™" FontSize="18" VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- COURSE LIST -->
        <ScrollViewer Grid.Column="1" Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,30,20">
            <Border Background="#9A8C98" CornerRadius="6" Padding="20">
                <StackPanel x:Name="CoursesPanel" Spacing="20">
                    <!-- Dynamic course items will be loaded here -->
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Window>